{
	"name": "buyte",
	"version": "1.0.0",
	"description": "Buyte core services (Serverless API, CLI and Scripts)",
	"repository": "git@github.com:rsoury/buyte-api.git",
	"author": "Ryan Soury <ryan@webdoodle.com.au>",
	"license": "UNLICENSED",
	"private": true,
	"main": "./build/bundle.js",
	"scripts": {
		"build": "rollup -c",
		"build:local": "yarn amplify:generate-config && yarn build",
		"clean": "rimraf build",
		"format": "./node_modules/.bin/prettier --write \"{src,serverless,scripts}/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
		"lint": "eslint -c ./.eslintrc.js \"{src,serverless,scripts}/**/*.{js,jsx,ts,tsx}\"",
		"db": "dotenv dynamodb-admin",
		"amplify:generate-config": "scripty",
		"graphql:bootstrap": "scripty",
		"user:attributes": "scripty",
		"cognito:style": "scripty"
	},
	"dependencies": {
		"@serverless-chrome/lambda": "^1.0.0-55",
		"adyen-cse-web": "github:rsoury/adyen-cse-web",
		"chrome-remote-interface": "^0.27.1"
	},
	"devDependencies": {
		"@aws-amplify/cli": "^6.0.1",
		"@babel/core": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"amazon-cognito-identity-js": "^3.0.7",
		"aws-amplify": "^1.1.30",
		"aws-appsync": "^1.7.1",
		"aws-sdk": "^2.466.0",
		"babel-eslint": "^10.0.2",
		"colors": "^1.3.3",
		"dotenv-cli": "^4.0.0",
		"dynamodb-admin": "^4.0.3",
		"es6-promise": "^4.2.5",
		"eslint": "^6.0.1",
		"eslint-config-airbnb": "^17.1.1",
		"eslint-config-prettier": "^6.0.0",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-import": "^2.18.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.0",
		"esm": "^3.2.25",
		"graphql-tag": "^2.10.1",
		"husky": "^1.3.1",
		"if-env": "^1.0.4",
		"inquirer": "^6.2.2",
		"isomorphic-fetch": "^2.2.1",
		"jsonfile": "^5.0.0",
		"lint-staged": "^8.1.0",
		"lodash.get": "^4.4.2",
		"minimist": "^1.2.0",
		"mkdirp": "^0.5.1",
		"prettier": "^1.15.3",
		"prompt": "^1.0.0",
		"rimraf": "^2.6.3",
		"s3-deploy": "^1.2.0",
		"scripty": "^1.9.1",
		"serverless-dotenv": "^1.0.0-beta.2",
		"serverless-go-build": "^0.0.6",
		"serverless-iam-roles-per-function": "^2.0.1",
		"serverless-offline": "^8.2.0",
		"serverless-plugin-common-excludes": "^2.4.0",
		"serverless-plugin-include-dependencies": "^3.2.1",
		"serverless-plugin-scripts": "^1.0.2",
		"serverless-plugin-stage-variables": "^1.9.2",
		"serverless-pseudo-parameters": "^2.4.0",
		"serverless-scriptable-plugin": "^1.0.1",
		"tracer": "^0.9.8",
		"ws": "^6.1.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.+(js|jsx)": [
			"yarn lint --fix",
			"git add"
		],
		"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"yarn format",
			"git add"
		]
	},
	"scripty": {
		"silent": true
	}
}
